<h1>All your tasks</h1>

  <% @tasks.each do |task| %>
    <div class="d-flex">
      <% if task.completed  %>
        <p><%= "[X] " %><%= link_to task.title, task_path(task) %></p>
      <% else %>
        <p><%= "[ ] " %><%= link_to task.title, task_path(task) %></p>
      <%end%>
      <%= link_to "ðŸ—‘",
        task_path(task),
        method: :delete,
        data: { confirm: "Are you sure?" } %>
